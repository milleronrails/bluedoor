.single-title
  color: bdBlue
  font-family: merriweather
  font-size: 36px

.single-date
  font-family: lato
  font-size: 12px
  text-transform: uppercase
  font-weight: 700
  color: #98AAAC
  margin: 5 px 0 50px 0

.single-content
  margin-bottom: 40px

.single-categories
  border-top: 1px solid formGrey
  padding: 10px 0 10px 0
  ul
    margin: 0
    padding: 0
    list-style-type: none
    display: block
    li
      display: inline-block
      margin-right: 20px
      font-family: lato
      font-size: 12px
      text-transform: uppercase
      font-weight: 700
      color: #98AAAC
      text-decoration: none
      display: inline-block
      &:before
        font-family: icomoon
        display: inline-block
        margin-top: 10px
        content: "\f02b";
        padding-right: 3px
      a
        font-family: lato
        font-size: 12px
        text-transform: uppercase
        font-weight: 700
        color: #98AAAC
        text-decoration: none
        display: inline-block
        &:before
          font-family: icomoon
          display: inline-block
          margin-top: 10px
          content: "\f02b";
          padding-right: 3px
        &:hover
          text-decoration: underline

.single-comments
  margin: 30px 0

.form-allowed-tags
  display: none

.form-submit
  margin-top: -20px

#submit
  width: auto
  cursor: pointer
  @extend .button
  text-transform: uppercase
  padding: 10px 40px

#respond
  h3
    padding-top: 30px
    font-size: 30px
    font-family: lato
    font-weight: 900
    text-transform: uppercase
    color: bdBlue
    border-top: 1px solid formGrey
    a
      color: bdBlue
      text-decoration: none

 .commentlist
   margin-bottom: 40px

.comment-meta
  position: absolute
  left: 50px
  top: 20px
  a
    color: #98AAAC
    font-size: 12px
    font-weight: 700
    text-transform: uppercase
    text-decoration: none

.says
  display: none

.fn
  color: #586065
  font-size: 16px
  text-transform: uppercase
  font-style: normal
  font-weight: 700
  padding-left: 10px
  display: table-cell
  vertical-align: top

.comment
  position: relative
  margin-top: 30px
  p
    padding-left: 50px

.reply
  padding-left: 50px

.comment-reply-link
  color: bdOrange
  text-decoration: none
  &:hover
    text-decoration: underline

.comment-author
  display: table

#cancel-comment-reply-link
  font-size: 16px
  &:hover
    text-decoration: underline

.logged-in-as a
  color: bdOrange
  text-decoration: none
  &:hover
    text-decoration: underline

.comment.depth-2
  padding-left: 20px
  @media palmBreakpoint
    p
      margin-top: 30px
  .comment-meta
    left: 70px

.yarpp-thumbnail-title
  color: bdOrange
  text-decoration: none
  max-height: none
  &:hover
    text-decoration: underline

.yarpp-thumbnail
  height: auto !important
  width: auto !important

.related-post a
  color: bdOrange
  &:hover
    text-decoration: underline !important