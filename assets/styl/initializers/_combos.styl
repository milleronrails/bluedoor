// =======================================
// 1.Block
// =======================================
.combo
  display: table
  width: 100%

// =======================================
// 2.Elements
// =======================================
.combo-left
  display: table-cell
  padding-right: 5px
  vertical-align: top

.combo-right
  display: table-cell
  padding-left: 5px
  vertical-align: top

// =======================================
// 3.Modifiers
// =======================================
.combo--left
  > *:first-child
    width: 0
    // white-space: nowrap
    img
      max-width: none
  > *:last-child
    width: 100%

.combo--right
  > *:first-child
    width: 100%
  > *:last-child
    width: 0
    white-space: nowrap
    img
      max-width: none

.combo-middle
  vertical-align: middle

.combo--middle
  > *
    vertical-align: middle

.combo--bottom
  > *
    vertical-align: bottom

.combo--narrow
  > *:first-child
    padding-right: 2.5px
  > *:last-child
    padding-left: 2.5px

.combo--wide
  > *:first-child
    padding-right: 10px
  > *:last-child
    padding-left: 10px

.combo--xwide
  > *:first-child
    padding-right: 20px
  > *:last-child
    padding-left: 20px

.combo--full
  > *:first-child
    padding-right: 0
  > *:last-child
    padding-left: 0