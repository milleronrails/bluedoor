.ribbon
  display: inline-block
  color: #FFF
  padding: 7px 20px
  position: absolute
  top: 10px
  left: -10px
  z-index: 2
  text-shadow: 1px 1px 0 rgba(black, 0.7)
  white-space: nowrap
  // height: 48px
  // &:before, &:after
  //   content: ''
  //   position: absolute
  //   left: 100%
  //   display: block
  //   border: 10px solid transparent
  //   border-left-width: 5px
  //   border-right-width: 5px
  //   margin-left: -1px
  // &:before
  //   top: 0
  // &:after
  //   bottom: 0
  .icon
    font-size: 19px
    display: inline-block
    vertical-align: middle

.ribbon-label
  text-transform: uppercase
  font-family: lato
  font-size: 18px
  display: inline-block
  vertical-align: middle
  &:before
    content: ''
    position: absolute
    left: 0
    top: 100%
    border: 5px solid transparent

.ribbon--small
  padding: 5px 10px
  text-shadow: 2px 2px 0 rgba(black, 0.7)
  .icon
    font-size: 14px
  .ribbon-label
    font-size: 16px

.ribbon--large
  top: 35px
  left: -20px
  padding: 10px 10px 15px
  text-shadow: 2px 2px 0 rgba(black, 0.7)
  // &:before, &:after
  //   border: 18px solid transparent
  //   border-left-width: 10px
  //   border-right-width: 10px
  .icon
    font-size: 32px
    margin-right: 8px
  .ribbon-label
    font-size: 20px
    font-weight: 600
    &:before
      border: 10px solid transparent
  @media palmBreakpoint
    top: 10px
    left: -10px
    padding: 7px 20px
    text-shadow: 1px 1px 0 rgba(black, 0.7)
    &:before, &:after
      border: 10px solid transparent
      border-left-width: 5px
      border-right-width: 5px
    .icon
      font-size: 19px
    .ribbon-label
      font-size: 18px
      &:before
        border: 5px solid transparent

.ribbon--primary
  background-color: ribbonGrey
  border-top-left-radius: 3px
  // background-image: linear-gradient(lighten(ribbonGrey, 5) 0%, lighten(ribbonGrey, 5) 50%, ribbonGrey 50%, ribbonGrey 100%)
  &:before
    border-top-color: lighten(ribbonGrey, 5)
    border-left-color: lighten(ribbonGrey, 5)
  &:after
    border-bottom-color: ribbonGrey
    border-left-color: ribbonGrey
  .ribbon-label
    &:before
      border-top-color: ribbonGreyBg
      border-right-color: ribbonGreyBg