// typekit
lato = 'lato'
merriweather = 'merriweather'

html, body
  font-family: lato
  font-weight: 400
  font-size: 16px
  color: mainText

h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: 12px
  padding-top: 0

h1
  font-family: merriweather
  font-size: 46px
  color: #FFFFFF
  font-weight: 400
  @media palmBreakpoint
    font-size: 33px

h2
  font-family: merriweather
  font-weight: 400
  font-size: 36px

h3
  font-family: lato
  font-size: 30px
  font-weight: 700

h4
  font-family: lato
  font-size: 22px
  font-weight: 300

p
  line-height: 160%