.overlay
  position: fixed
  top: 0
  left: 0
  height: 100%
  width: 100%
  z-index: 15
  background-color: rgba(0,0,0,0.8)
  display: none
  &.is-active
    display: block

.modal
  border-radius: 5px
  padding: 40px 30px
  z-index: 15
  letter-spacing: 0
  width: 360px
  height: auto
  position: fixed
  top: 50%
  left: 50%
  margin-top: -300px
  margin-left: -180px
  background-color: white
  text-align: center
  display: none
  @media palmBreakpoint
    width: 290px
    margin-left: -145px
  &.is-active
    display: block
  .icon-close
    font-size: 30px
    color: bdBlue
    position: absolute
    right: 8px
    top: 19px
    margin-top: -14px
    cursor: pointer
    &:hover
      color: darken(bdBlue, 10%)