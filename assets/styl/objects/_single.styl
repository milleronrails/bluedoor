.form-allowed-tags
  display: none

.form-submit
  margin-top: -20px

#submit
  width: auto
  cursor: pointer
  @extend .button
  text-transform: uppercase
  padding: 10px 40px

#respond
  h3
    padding-top: 30px
    font-size: 30px
    font-family: lato
    font-weight: 900
    text-transform: uppercase
    color: bdBlue
    border-top: 1px solid formGrey
    a
      color: bdBlue
      text-decoration: none

 .commentlist
   margin-bottom: 40px

.comment-meta
  position: absolute
  left: 50px
  top: 20px
  a
    color: #98AAAC
    font-size: 12px
    font-weight: 700
    text-transform: uppercase
    text-decoration: none

.says
  display: none

.fn
  color: #586065
  font-size: 16px
  text-transform: uppercase
  font-style: normal
  font-weight: 700
  padding-left: 10px
  display: table-cell
  vertical-align: top

.comment
  position: relative
  margin-top: 30px
  p
    padding-left: 50px

.reply
  padding-left: 50px

.comment-reply-link
  color: bdOrange
  text-decoration: none
  &:hover
    text-decoration: underline

.comment-author
  display: table

#cancel-comment-reply-link
  font-size: 16px
  &:hover
    text-decoration: underline

.logged-in-as a
  color: bdOrange
  text-decoration: none
  &:hover
    text-decoration: underline

.comment.depth-2
  padding-left: 20px
  @media palmBreakpoint
    p
      margin-top: 30px
  .comment-meta
    left: 70px

.yarpp-thumbnail-title
  color: bdOrange
  text-decoration: none
  &:hover
    text-decoration: underline

.yarpp-thumbnail
  height: auto !important
  width: auto !important