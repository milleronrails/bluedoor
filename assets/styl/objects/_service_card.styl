.service-card
  position: relative
  width: 100%
  padding: 65px 25px 25px
  background-color: #FFF
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2)
  border-top: 6px solid bdBlue
  max-width: 300px
  text-align: center
  margin-bottom: 95px
  p
    text-align: left
    margin-bottom: 22px
  .button
    background-color: #FFF
    color: bdOrange
    text-transform: uppercase
    display: inline-block
    border: 2px solid bdOrange
    padding: 8px 25px
    &:hover
      background-color: bdOrange
      color: #FFF
  .hexagon
    text-align: center
    height: 99px
    width: 86px
    background: url("../img/hexagon.png") no-repeat center center
    -webkit-background-size: contain
    -moz-background-size: contain
    -o-background-size: contain
    background-size: contain
    position: absolute
    top: -52px
    right: 50%
    margin-right: -43px
    .icon
      display: table-cell
      height: 99px
      width: 86px
      vertical-align: middle
    [class^="icon-"], [class*=" icon-"]
      font-size: 56px
      color: #FFF

.service-card-title
  font-family: lato
  color: bdBlue
  font-weight: 800
  text-transform: uppercase
  font-size: 16px
  margin-bottom: 10px

@media lapBreakpoint
  .service-card.first
    float: right
  .service-card.third
    @extend .center-block

@media palmBreakpoint
  .service-card
    @extend .center-block
