.margin-top
  &._20
    margin-top: 20px
  &._10
    margin-top: 10px

.italic
  font-style: italic

.orange-underline
  border-bottom: 2px solid bdOrange

.center
  text-align: center

.center-block
  margin-left: auto
  margin-right: auto

.temp-spacing
  min-height: 400px

.hide
  display: none !important

.hidden
  visibility: hidden !important

.shown
  visibility: visible !important

.relative
  position: relative

.offscreen
  position: absolute
  left: -9999px
  top: -9999px

.mobile-only
  @media palmBreakpoint
    display: inline-block
    margin: 15px 0 30px 0
  @media lapBreakpoint
    display: none
  @media deskBreakpoint
    display: none

.not-mobile
  @media palmBreakpoint
    display: none
  @media lapBreakpoint
    display: inline-block
  @media deskBreakpoint
    display: inline-block