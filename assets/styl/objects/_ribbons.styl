.ribbon
  display: inline-block
  color: #FFFFFF
  padding: 10px 25px 5px
  position: absolute
  top: 45px
  right: -24px
  z-index: 2
  text-shadow: 1px 1px 0 rgba(black, 0.7)
  white-space: nowrap
  // &:before, &:after
  //   content: ''
