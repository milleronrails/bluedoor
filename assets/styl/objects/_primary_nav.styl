.primary-nav
  position: absolute
  z-index: 1
  width: 100%
  ul
    right: 100px
    position: absolute
    @extend .plain-list
    @media lapBreakpoint
      right: 0px
    li
      display: inline-block
      margin: 40px 20px
      a
        font-family: $sourceSansPro
        font-size: 18px
        font-weight: 600
        color: color('off-white')
        text-transform: uppercase
        text-decoration: none
        &:hover, &.active
          text-decoration: underline

  @media palmBreakpoint
    ul
      margin: 0 auto
      left: 0
      right: 0
      text-align: center
      background-color: rgba(0,0,0,.65)
      li
        margin: 12px 20px
        a
          font-size: 14px


