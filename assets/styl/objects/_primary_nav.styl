.primary-nav
  position: absolute
  z-index: 1
  width: 100%
  display: table
  padding: 20px 50px
  @extend .box-sizing
  .logo-section
    display: inline-block
  .logo
    max-width: 150px
    display: block
  .links
    display: inline-block
  .tagline
    display: block
    margin-top: 10px
    font-family: lato
    font-size: 14px
    font-weight: 400
    opacity: 0.9
    color: #FFFFFF

  @media portableBreakpoint
    padding: 20px
  @media palmBreakpoint
    text-align: center
    .tagline
      display: none

.primaryNav-small
  padding: 50px 0
  background-image: -webkit-gradient( linear, right top, left bottom, color-stop(0.12, #1597B8), color-stop(1, #0E52A0) ); background-image: -o-linear-gradient(left bottom, #1597B8 12%, #0E52A0 100%); background-image: -moz-linear-gradient(left bottom, #1597B8 12%, #0E52A0 100%); background-image: -webkit-linear-gradient(left bottom, #1597B8 12%, #0E52A0 100%); background-image: -ms-linear-gradient(left bottom, #1597B8 12%, #0E52A0 100%); background-image: linear-gradient(to left bottom, #1597B8 12%, #0E52A0 100%);
  color: #FFFFFF

.primary-nav--left
  display: table-cell
  vertical-align: middle
  @media palmBreakpoint
    display: block

.primary-nav--right
  display: table-cell
  vertical-align: middle
  text-align: right
  padding-right: 20px
  @media portableBreakpoint
    padding-right: 50px
  @media palmBreakpoint
    display: block
    margin-top: 6px
    padding-right: 0
    text-align: center

.social-icons
  margin-top: 10px
  a
    text-decoration: none
    margin: 0 5px
    &:last-child
      margin: 0 0 0 5px
    i
      color: #FFFFFF
      font-size: 18px
      transition: all 0.1s ease-in-out
      opacity: .9
      &:hover
        opacity: 1

/* Navigation Menu - Background */
.navigation {
  /* critical sizing and position styles */
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 0;
  background: #111
  /* non-critical appearance styles */
}

.navigation-list
  list-style: none
  float: right
  background: #111
  text-align: center
  li
    width: 200px;
    border-top: 1px solid #111
    border-bottom: 1px solid #000
    a
      display: block
      padding: 1em
      color: white
      font-size: 1.2em
      text-decoration: none
      transition: color 0.2s, background 0.5s
      &:hover
        color: bdBlue


/* Site Wrapper - Everything that isn't navigation */
.site-wrap {
  /* Critical position and size styles */
  min-height: 100%;
  min-width: 100%;
  background-color: white; /* Needs a background or else the nav will show through */
  position: relative;
  top: 0;
  bottom: 100%;
  right: 0;
  z-index: 1;
}

/* Nav Trigger */
.nav-trigger {
  /* critical styles - hide the checkbox input */
  position: absolute;
  clip: rect(0, 0, 0, 0);
}

label[for="nav-trigger"] {
  /* critical positioning styles */
  position: fixed;
  right: 20px; top: 35px;
  z-index: 2;

  /* non-critical apperance styles */
  height: 30px;
  width: 30px;
  border: 6px solid bdBlue
  background-color: bdBlue
  cursor: pointer;
  background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' version='1.1' x='0px' y='0px' width='30px' height='30px' viewBox='0 0 30 30' enable-background='new 0 0 30 30' xml:space='preserve'><rect width='30' height='6' fill='#FFFFFF'/><rect y='24' width='30' height='6' fill='#FFFFFF'/><rect y='12' width='30' height='6' fill='#FFFFFF'/></svg>");
  background-size: contain;
  @media palmBreakpoint {
    right: 10px; top: 19px;
  }
}

/* Make the Magic Happen */
.nav-trigger + label, .site-wrap {
  transition: right 0.2s;
}

.nav-trigger:checked + label {
  right: 215px;
}

.nav-trigger:checked ~ .site-wrap {
  right: 200px;
  box-shadow: 0 0 5px 5px rgba(0,0,0,0.5);
}

body {
  /* Without this, the body has excess horizontal scroll when the menu is open */
  overflow-x: hidden;
}



/* Micro reset */
*,*:before,*:after{-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box;margin:0;padding:0;}