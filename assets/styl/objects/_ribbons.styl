  //   margin-left: -1px
  // &:before
  //   top: 0
  // &:after
  //   bottom: 0
  .icon
    font-size: 19px
    display: inline-block
    vertical-align: middle

.ribbon-label
  text-transform: uppercase
  font-family: museo-sans
  font-size: 18px
  display: inline-block
  vertical-align: middle
  &:before
    content: ''
    position: absolute
    right: 0
    top: 100%
    border: 12px solid transparent
    @media palmBreakpoint
      display: none
  @media palmBreakpoint
    display: table
    width: 100%

  .ribbon-label-small, .ribbon-label-amount
    display: block
    text-align: center
    font-weight: 500
    @media palmBreakpoint
      display: table-cell
      vertical-align: middle

  .ribbon-label-small
    font-size: 14px
    @media palmBreakpoint
      text-align: right
      padding-right: 3px

  .ribbon-label-amount
    font-size: 28px
    @media palmBreakpoint
      text-align: left
      padding-left: 3px

.ribbon--primary
  background-color: ribbonGrey
  border-top-left-radius: 5px
  border-bottom-left-radius: 5px
  border-top-right-radius: 5px
  -webkit-border-top-left-radius: 5px
  -webkit-border-bottom-left-radius: 5px
  -webkit-border-top-right-radius: 5px
  -moz-border-radius-top-left: 5px
  -moz-border-radius-bottom-left: 5px
  -moz-border-radius-top-right: 5px
  @media palmBreakpoint
    display: block
    position: static
    background-color: #FFFFFF
    text-align: center
    text-shadow: none
    color: ribbonGrey
    padding: 0
    margin-bottom: 20px

